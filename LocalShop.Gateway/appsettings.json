{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/product/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/product/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "https://localhost:7001"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-destination": {
            "Address": "https://localhost:7003"
          }
        }
      }
    }
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyHereThatShouldBeAtLeast32CharactersLong",
    "Issuer": "LocalShop.AuthService",
    "Audience": "LocalShop.API",
    "ExpirationHours": 24
  }
}


